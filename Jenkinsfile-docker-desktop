pipeline {
    agent any

    tools {
        maven 'maven-3.8.7'
    }

    environment {
        IMAGE = "ejob12/liontech-java:${BUILD_NUMBER}"
        // Use Docker Desktop kubeconfig instead of Minikube
        KUBECONFIG = credentials('kubeconfig-docker-desktop')
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/ejob12/liontech-online-library-web-app.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        // stage('SonarQube Analysis') {
        //     steps {
        //         withSonarQubeEnv('SonarQube') {
        //             sh 'mvn sonar:sonar'
        //         }
        //     }
        // }

        // stage('Publish to Nexus') {
        //     steps {
        //         sh 'mvn deploy'
        //     }
        // }

        stage('Docker Build & Push') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-creds',
                    usernameVariable: 'U',
                    passwordVariable: 'P'
                )]) {
                    sh '''
                      docker login -u $U -p $P
                      docker build -t $IMAGE .
                      docker push $IMAGE
                    '''
                }
            }
        }

        stage('Deploy To Docker Desktop Kubernetes') {
            steps {
                sh '''
                  kubectl config use-context docker-desktop
                  kubectl set image deployment/liontech liontech=$IMAGE
                '''
            }
        }
    }
}


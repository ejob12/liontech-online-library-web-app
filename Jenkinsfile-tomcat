pipeline {
    agent any

    tools {
        maven 'maven-3'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/ejob12/liontech-online-library-web-app.git'
            }
        }

        stage('Build WAR') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh 'mvn sonar:sonar'
                }
            }
        }

        stage('Publish to Nexus') {
            steps {
                sh 'mvn deploy'
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                deploy adapters: [tomcat9(
                  credentialsId: 'tomcat-creds',
                  url: 'http://<tomcat-ip>:8080'
                )],
                war: 'target/*.war'
            }
        }
    }
}
